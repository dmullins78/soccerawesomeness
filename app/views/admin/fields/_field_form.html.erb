<%= form_for [:admin, @field], :html => { class:"form-horizontal", role: "form" } do |f| %>

  <div class="form-group">
    <%= f.label :display_name, class:"col-sm-2 control-label"%>
    <div class="col-sm-10">
      <%= text_field :field, :name %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit 'Save', :class => 'btn btn-primary' %>
      <input type="button" class="btn" value="Cancel" onclick="location='/admin/fields'"/> 
      <% if @field.persisted? %>
        <%= link_to 'Delete', admin_field_url(@field), method: :delete, confirm: 'Are you sure?', class: 'btn btn-danger' %>
      <% end %>
    </div>
  </div>

<% end %>
